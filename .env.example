# ===========================================
# Medusa Multi-Brand Store - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values

# Node Environment
NODE_ENV=development

# ===========================================
# Database Configuration (PostgreSQL)
# ===========================================
POSTGRES_USER=medusa
POSTGRES_PASSWORD=medusa_password
POSTGRES_DB=medusa_db
POSTGRES_PORT=5432

# Database URL (used by Medusa)
DATABASE_URL=postgres://medusa:medusa_password@localhost:5432/medusa_db

# ===========================================
# Redis Configuration
# ===========================================
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379

# ===========================================
# Medusa Configuration
# ===========================================
# Backend URL
MEDUSA_BACKEND_URL=http://localhost:9000

# JWT and Cookie secrets (generate secure random strings for production)
JWT_SECRET=your-super-secret-jwt-key-change-in-production
COOKIE_SECRET=your-super-secret-cookie-key-change-in-production

# ===========================================
# CORS Configuration
# ===========================================
# Storefront URLs (comma-separated for multiple storefronts)
# Brand 1 runs on port 3001, Brand 2 on port 3002
STORE_CORS=http://localhost:3001,http://localhost:3002

# Admin dashboard URL
ADMIN_CORS=http://localhost:5173,http://localhost:9000

# Auth CORS (all allowed origins)
AUTH_CORS=http://localhost:5173,http://localhost:9000,http://localhost:3001,http://localhost:3002

# ===========================================
# Stripe Configuration (Mexico)
# ===========================================
# Get these from https://dashboard.stripe.com/apikeys
# IMPORTANT: Use Mexico-enabled Stripe account for OXXO Pay support

# Secret key (starts with sk_test_ or sk_live_)
STRIPE_API_KEY=sk_test_your_stripe_secret_key

# Publishable key (starts with pk_test_ or pk_live_)
# Used by frontend to initialize Stripe.js
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# Webhook secret (starts with whsec_)
# Get from Dashboard > Developers > Webhooks > Select endpoint > Signing secret
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Webhook URL to configure in Stripe Dashboard:
# Development: Use ngrok or similar: https://your-ngrok-url.ngrok.io/webhooks/stripe
# Production: https://your-domain.com/webhooks/stripe

# Required webhook events to enable in Stripe Dashboard:
# - payment_intent.succeeded
# - payment_intent.payment_failed
# - payment_intent.canceled
# - payment_intent.requires_action (for OXXO)
# - charge.refunded
# - charge.dispute.created

# ===========================================
# Cloudinary Configuration
# ===========================================
# Get these from https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# ===========================================
# Admin User (for seeding)
# ===========================================
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=supersecret

# ===========================================
# Optional: Development Tools
# ===========================================
ADMINER_PORT=8080
